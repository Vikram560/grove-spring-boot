<query xmlns="http://marklogic.com/appservices/search" xmlns:search="http://marklogic.com/appservices/search" xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <and-query>
        <geospatial-constraint-query>
            <constraint-name>Location</constraint-name>
            <box>
                <south>0.0</south>
                <west>150.0</west>
                <north>100.0</north>
                <east>-150.0</east>
            </box>
        </geospatial-constraint-query>
        <geospatial-constraint-query>
            <constraint-name>Location</constraint-name>
            <point>
                <latitude>0.0</latitude>
                <longitude>100.0</longitude>
            </point>
        </geospatial-constraint-query>
        <geospatial-constraint-query>
            <constraint-name>Location</constraint-name>
            <circle>
                <radius>100.0</radius>
                <point>
                    <latitude>100.0</latitude>
                    <longitude>0.0</longitude>
                </point>
            </circle>
        </geospatial-constraint-query>
        <geospatial-constraint-query>
            <constraint-name>Location</constraint-name>
            <polygon>
                <point>
                    <latitude>0.0</latitude>
                    <longitude>100.0</longitude>
                </point>
                <point>
                    <latitude>100.0</latitude>
                    <longitude>0.0</longitude>
                </point>
            </polygon>
        </geospatial-constraint-query>
    </and-query>
</query>